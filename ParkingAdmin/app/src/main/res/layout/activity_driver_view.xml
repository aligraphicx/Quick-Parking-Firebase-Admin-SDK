<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverView"
    >
<ScrollView
    android:id="@+id/mainScroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/actionbtn"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/driverView_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/gradian_pink"
            android:scaleType="centerCrop"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/driverView_NameCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/driverView_profile"
            app:cardElevation="7dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >

                <TextView
                    android:id="@+id/driverView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ali Raza"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/driverView_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ali@gmail.com"
                    android:textStyle="italic"
                    android:textSize="18dp"
                    android:layout_marginLeft="30sp"
                    />

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/driverView_personal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Personal Information"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_below="@id/driverView_NameCard"
            android:elevation="5dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/driverView_personal_card"
            android:layout_below="@id/driverView_personal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/driverView_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03104831054654"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/driverView_dateofbirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/12-1998"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/driverView_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="15sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/driverView_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="homw town lahore city"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="CNIC"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/driverView_cnic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0135431843484354"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/driverView_license_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="License Information"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_below="@id/driverView_personal_card"
            android:elevation="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_below="@id/driverView_license_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="License Number"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/driverView_licenseNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="265987639"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="License Type"
                        android:layout_marginRight="30dp"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/driverView_licenseType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HTV"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>

    <TableRow
        android:id="@+id/actionbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"

        >

        <Button
            android:id="@+id/driverView_block"
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:text="BLOCk"
            />
        <Button
            android:id="@+id/driverView_sendNotification"
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:text="Send Notification"
            />
        <Button
            android:id="@+id/driverView_delete"
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:text="Delete"
            />
    </TableRow>
</RelativeLayout>