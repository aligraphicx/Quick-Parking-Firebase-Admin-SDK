<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <ScrollView
        android:id="@+id/mainScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/driverView_NameCard"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="7dp"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/vehicleOwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ali Raza"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/vehicleOwnerEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ali@gmail.com"
                        android:textStyle="italic"
                        android:textSize="18dp"
                        android:layout_marginLeft="30sp"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/driverView_personal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Personal Information"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_below="@id/driverView_NameCard"
                android:elevation="5dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/driverView_personal_card"
                android:layout_below="@id/driverView_personal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:layout_marginRight="30dp"
                            android:textSize="15sp"

                            />

                        <TextView
                            android:id="@+id/vehicleOwnerPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03104831054654"
                            android:textSize="15sp"
                            />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_marginRight="30dp"
                            android:textSize="15sp"

                            />

                        <TextView
                            android:id="@+id/vehvileOwnerAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="homw town lahore city"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="CNIC"
                            android:layout_marginRight="30dp"
                            android:textSize="15sp"

                            />

                        <TextView
                            android:id="@+id/vehicleOwnerID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0135431843484354"
                            android:textSize="15sp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/driverView_license_title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Vehicle Information"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_below="@id/driverView_personal_card"
                android:elevation="5dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_below="@id/driverView_license_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Name"
                            android:layout_marginRight="30dp"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/vehicleName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="265987639"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Number"
                            android:layout_marginRight="30dp"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/vehicleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HTV"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/vehicleConfirmBtn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Confirm"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </RelativeLayout>

    </ScrollView>


</RelativeLayout>