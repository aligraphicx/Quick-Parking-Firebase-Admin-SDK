<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverManager"
    android:orientation="vertical"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"

        >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >


        <Button
            android:id="@+id/addDriver"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Add Driver"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/dropDriver"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Drop Driver"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/blockDriver"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Block Driver"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/driversSetting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Driver Setting"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/driverStatus"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Driver Status"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/allDrivers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="View All Driver"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    </LinearLayout>


</ScrollView>


    </androidx.cardview.widget.CardView>
</RelativeLayout>